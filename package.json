{
	"name": "vsc-extension-quickstart",
	"displayName": "VS Code Extension Quickstart",
	"description": "Boilerplate for a new VS Code extension using TypeScript and NPM",
	"version": "0.3.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/MichaelCurrin/vsc-extension-quickstart"
	},
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:quickstart.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "quickstart.helloWorld",
				"title": "Hello World"
			}
		]
	},
	"scripts": {
		"watch": "tsc -watch -p ./",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"vscode:prepublish": "npm run compile"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.0",
		"@types/node": "^14.14.20",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^3.10.1",
		"@typescript-eslint/parser": "^3.10.1",
		"eslint": "^7.17.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.4.1"
	}
}
